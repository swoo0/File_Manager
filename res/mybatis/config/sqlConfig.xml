<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>

	<typeAliases>
		<typeAlias type="kr.co.file.dto.SubwayVO" alias="subway" />
<!-- 		<typeAlias type="dto.Book" alias="Book" /> -->
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
				<dataSource type="POOLED">
					<property name="driver" value="org.postgresql.Driver" />
					<property name="url" value="jdbc:postgresql://localhost:5432/mini" />
					<property name="username" value="postgres" />
					<property name="password" value="0911" />
				</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="mybatis/mappers/Subway-Mapper.xml" />
<!-- 		<mapper resource="sqlmap/Book.xml" /> -->
	</mappers>
	
</configuration>